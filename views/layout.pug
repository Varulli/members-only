include includes/mixins.pug

doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title= title

    link(rel='stylesheet' href='/stylesheets/style.css')
  body
    header 
      .logo 
        a(href='/') Members Only 

      nav 
        menu 
          .nav-links
            a(href='/') Home 
            if user 
              a(href='/profile') Profile 

          .account-buttons 
            if !user 
              a.login(href='/login') Log In 
              if dev
                a.login(href='/login/dev') Log In as Dev
              a.sign-up(href='/sign-up') Sign Up 
            else 
              a.logout(href='/logout') Log Out

    main
      block content