extends layout

block content
  h1= title

  +displayBoardList(boards)

  if user && user.isAdmin
    form(method='POST')
      .form-group 
        label(for='board_title') Title
        input(type='text' name='board_title' id='board_title' value=board_title required)
        if errors && errors.has('title')
          p.error-message * #{errors.get('title')}

      .form-group 
        label(for='description') Description
        textarea(name='description' id='description' value=description)

      button(type='submit') Create Board